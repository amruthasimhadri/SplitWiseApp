@model OwedAmountsViewModel

<div class="container">
    <h4>Group Review</h4>

    <div class="owed-amounts-container">
        <div class="owed-details">
            <h5>Group Name: @Model.GroupName</h5>
        </div>

        <div class="owed-details">
            <h5>Total Amount Owed to Me: @Model.TotalOwedToMe</h5>
        </div>
        <div class="owed-details">
            <h5>Total Amount I Owe to Others: @Model.TotalOwedByMe</h5>
        </div>
    </div>
</div>









