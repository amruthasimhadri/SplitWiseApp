@model SplitWiseApp.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}



@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-action="Login" method="post" style="max-width: 600px; margin: 0 auto; border: 2px solid #000; padding: 20px; border-radius: 10px;">
    <centre style="display:flex;justify-content:center"><h2>Login</h2></centre>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter email" required>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
    </div>
    </br>
    <centre style="display:flex;justify-content:center">
        <button type="submit" class="btn btn-primary">Submit</button></centre>
        </br>
    <div class="text-center">
        <p>No Account?Back to<a href="@Url.Action("Register", "SplitWise")"> Register</a></p>
    </div>
</form>
