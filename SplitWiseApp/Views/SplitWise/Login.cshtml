
@model SplitWiseApp.Models.LoginModel

<!DOCTYPE html>

<html lang="en">

<head>



    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Instagram Registration</title>

    <style>

        body {
            font-family: Arial, sans-serif;
            background-color: #fafafa;
            text-align: center;
        }

        form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            background-color: #3897f0;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #3271a8;
            }
    </style>

</head>

<body>

    <form asp-controller="SplitWise" asp-action="Login" method="post">

        <div class="form-group">

            <label asp-for="Email" class="control-label">Email</label>

            <input asp-for="Email" type="email" class="form-control" style="border:1px solid black" />

            <span asp-validation-for="Email" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label asp-for="Password" class="control-label">Password</label>

            <input asp-for="Password" type="password" class="form-control" style="border:1px solid black" />

            <span asp-validation-for="Password" class="text-danger"></span>

        </div>

        <div class="text-left">

            <button type="submit" class="btn btn-dark">Login</button>

        </div>

    </form>

    <div class="text-center">

        <p>No Account?<a href="@Url.Action("Register", "SplitWise")"> Register Here</a></p>

    </div>

</body>

</html>
